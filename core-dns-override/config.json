{
  "name": "Core DNS Override",
  "version": "0.1",
  "slug": "coredns-fix",
  "description": "Periodically ensure the DNS container isn't using Cloudflare",
  "url": "https://github.com/bentasker/HomeAssistantAddons/tree/master/core-dns-override",
  "advanced": true,
  "startup": "services",
  "ingress": false,
  "ingress_port": 0,
  "ingress_stream": true,
  "panel_icon": "mdi:console",
  "panel_title": "DNSFix",
  "homeassistant": "0.92.0b2",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "hassio_api": false,
  "hassio_role": "manager",
  "services": ["mysql:want", "mqtt:want"],
  "homeassistant_api": false,
  "host_network": false,
  "uart": false,
  "usb": false,
  "gpio": false,
  "audio": false,
  "apparmor": false,
  "host_dbus": false,
  "stdin": false,
  "docker_api": true,
  "privileged": ["NET_ADMIN", "SYS_ADMIN", "SYS_RAWIO", "SYS_TIME", "SYS_NICE"],
  "devices": [],
  "map": [
    "config:rw"
  ],
  "journald": false,
  "options" : {
    "interval": 60,
    "dns_container" : "hassio_dns",
    "use_dns_template" : false,
    "block_supervisor_updates" : false,
    "supervisor_container" : "hassio_supervisor",
    "block_domain" : "version.home-assistant.io",
    "block_dest": "127.0.0.12"
  },
  "schema" : {
    "interval" : "int",
    "dns_container" : "str",
    "use_dns_template" : "bool?",
    "block_supervisor_updates" : "bool?",
    "supervisor_container" : "str",
    "block_domain" : "str",
    "block_dest": "str"    
  }
}
